<Application x:Class="TicTacToe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <!--With the StartupUri you could change the MainWindow opened at application startup to any other window you implemented-->
    <Application.Resources>
         <!--You could define resources just like we did in MainWindow.xaml, these resources would be available in any part of the application
             and not just a single Window-->
    </Application.Resources>
</Application>
